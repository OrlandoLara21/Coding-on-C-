#include <iostream>
 using namespace std;

int subtraction(int a,int b){
  int r;
  r=a-b;
  return r;
}

int multiplication(int a,int b){
  int r;
  r=a*b;
  return r;
}

 int main(){
   int x,y,sub,mul,divi,remain;
   cout<<"This is a program that uses functions"<<endl;
   cout<<"What is the first integer? ";
   cin>>x;
   cout<<"What is the second integer? ";
   cin>>y;
   sub=subtraction(x,y);
   mul=multiplication(x,y);
   cout<<"The difference of the integers is "<<sub<<endl;
   cout<<"The product of the integers is "<<mul<<endl;
 }

#include <iostream>
#include <cmath>
#include <vector>
using std::cout;
using std::cin;
using std::endl;
using std::vector;

float getTotal(vector<float> & v,int size){
  float r=0;
  for(int n=0;n<size;n++){
    r+=v[n];
  }
  return r;
}

float getAverage(vector<float> & v,int size){
  float r=(getTotal(v,size))/size;
  return r;
}

float getstdDev(vector<float> & v, int size){    //always use & to save up space
  float average=getAverage(v,size),r=0;
  for(int n=0;n<size;n++){
    r+=pow(average-(v[n]),2);   //this is the sum of the variances squared
  }
  r=sqrt(r/(size-1));
  return r;
}

int main(){
  vector<float> v;
  float x,total,average,stdDev;
  cout<<"\nWhat's up people, this program uses vectors to give you the total,\n";
  cout<<"average and standard deviation of any set of numbers you give me.Sooo...\n";
  cout<<"give the set of numbers and when your done, just enter a 0"<<endl;
  while(cin>>x,x!=0)  //this inputs until it recieves a 0
  v.push_back(x);      //there is no need for brackets beacuse there is only one command
  total = getTotal(v,v.size());
  average=getAverage(v,v.size());
  stdDev=getstdDev(v,v.size());
  cout<<"The total is: "<<total<<endl;
  cout<<"The average is: "<<average<<endl;
  cout<<"The standard deviation is: "<<stdDev<<endl;
}

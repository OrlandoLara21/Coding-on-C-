#include <iostream>
#include <cmath>
#include <vector>
using std::cout;
using std::cin;
using std::endl;
using std::vector;

float getTotal(vector<float> & v, int size){
  float r=0;
  for(int n=0;n<size;n++)
    r+=v[n];
  return r;
}

int main(){
  vector<float> v;
  float x,total,average;
  cout<<"This program calculates the total, average and standard devviation of a set of numbers\n";
  cout<<"Type in the numbers and enter a 0 when done."<<endl;
  while(cin>>x,x!=0)//ask for values until it reads a 0
  v.push_back(x);
  total= getTotal(v,v.size());
  cout<<"The total is equal to: "<<total<<endl;
}

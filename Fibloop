#include <iostream>
using namespace std;

int fibonacci(int n){
  int count=1,fib=0,fib1=0,fib2=1;
  if(n==0)
  fib=0;
  else if(n==1)
  fib=1;
  else
  while(count<n){
    fib=fib1+fib2;
    fib1=fib2;
    fib2=fib;
    count++;
  }
  return fib;
}

int main(){
  int n,result;
  cout<<"Please give a non-negative integer so that I can return to you the nth\nnumber in the fibonacci secuence"<<endl;
  cin>>n;
  result=fibonacci(n);
  cout<<"The answer is "<<result<<endl;
}
